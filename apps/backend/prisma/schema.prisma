generator client {
  provider = "prisma-client-js"
  output   = "../src/@generated/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MarketOrder {
  id               String   @id @default(cuid())
  marketOrderId    String
  itemId           String
  locationName     String
  quality          Int
  enchantmentLevel Int
  type             String
  amount           Int
  price            Int
  expiresAt        DateTime
  receivedAt       DateTime @default(now())
}


model OcrPrice {
  id        String   @id @default(cuid())
  itemId    String
  location  String
  price     Int
  createdAt DateTime @default(now())
}